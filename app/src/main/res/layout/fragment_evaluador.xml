<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.EvaluadorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/sp_evaluator_names"
            android:layout_width="335dp"
            android:layout_height="46dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_evaluator_evaluatorcard"
            android:layout_width="420dp"
            android:layout_height="590dp"
            app:cardElevation="0dp"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_evaluator_names"
            app:layout_constraintVertical_bias="1.0">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_bone"
                    android:layout_marginTop="100dp"
                    android:elevation="4dp">

                    <TextView
                        android:id="@+id/tv_evaluator_email"
                        android:layout_width="171dp"
                        android:layout_height="79dp"
                        android:layout_below="@+id/tv_evaluator_name"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="31dp"
                        android:layout_marginTop="21dp"
                        android:background="@color/shimmerColor"
                        android:gravity="center"
                        android:textColor="#117CFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_evaluator_number"
                        android:layout_width="168dp"
                        android:layout_height="79dp"
                        android:layout_below="@+id/tv_evaluator_name"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="21dp"
                        android:layout_marginEnd="38dp"
                        android:background="@color/shimmerColor"
                        android:gravity="center"

                        android:textColor="#117CFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_evaluator_name"
                        android:layout_width="329dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="46dp"
                        android:layout_marginTop="69dp"
                        android:background="@color/shimmerColor"
                        android:layout_marginEnd="45dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="124dp"
                    android:layout_height="124dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="64dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/iv_evaluator_imgvevalu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/shimmerColor"
                        android:contentDescription="@string/app_name" />
                </androidx.cardview.widget.CardView>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>